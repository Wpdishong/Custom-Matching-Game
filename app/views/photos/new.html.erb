<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2>Upload New Photo</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @photo, local: true) do |f| %>
          <% if @photo.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h4>
              <ul>
                <% @photo.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :image, class: "form-label" %>
            <%= f.file_field :image, class: "form-control", accept: 'image/jpeg,image/png' %>
          </div>

          <div class="actions">
            <%= f.submit "Upload Photo", class: "btn btn-primary" %>
            <%= link_to "Back", photos_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
